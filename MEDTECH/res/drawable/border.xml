<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
   
    <item>
        <shape>
            <gradient
                android:startColor="#fff"
                android:centerColor="#fff"
                android:endColor="#fff"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#7fcc27"
                 />
            <corners
                android:radius="20dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>